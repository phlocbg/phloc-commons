<changelog xmlns="http://www.phloc.com/ns/changelog/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.phloc.com/ns/changelog/1.0 schemas/changelog-1.0.xsd" version="1.0" component="phloc-jaxb22-plugin">
  <entry date="2013-04-30" category="api" action="add">
    <change>
      <text locale="en">Added new option "-Xphloc-default-locale" to set a custom default locale instead of the platform locale</text>
    </change>
  </entry>
  <entry date="2013-04-30" category="api" action="add">
    <change>
      <text locale="en">Added new option "-Xphloc-fields-private" to make all generated fields private instead of the default protected</text>
    </change>
  </entry>
  <entry date="2013-04-30" category="api" action="add">
    <change>
      <text locale="en">Added new option "-Xphloc-annotate" to generate @Nullable/@Nonnull annotations for all getters and setters</text>
    </change>
  </entry>
  <entry date="2013-04-30" category="tech" action="update">
    <change>
      <text locale="en">Updated to JAXB 2.2.7</text>
    </change>
  </entry>
  <release date="2013-04-29" version="2.2.6.1" />
  <entry date="2013-04-29" category="api" action="add">
    <change>
      <text locale="en">Added new option -Xphloc-list-extension to generate extended list methods: has...Entries(), hasNo...Entries(), get...Count() and get...AtIndex(int)</text>
    </change>
  </entry>
  <release date="2012-09-29" version="2.2.6" />
  <entry date="2012-09-29" category="tech" action="update">
    <change>
      <text locale="en">Updated to JAXB 2.2.6</text>
    </change>
  </entry>
  <release date="2012-04-23" version="2.2.5.5" />
  <entry date="2012-04-23" category="tech" action="fix">
    <change>
      <text locale="en">Fixed generation of equals code when calling super.equals</text>
    </change>
  </entry>
  <entry date="2012-04-23" category="tech" action="fix">
    <change>
      <text locale="en">Not generating toString code for derived classes without additional fields</text>
    </change>
  </entry>
  <release date="2012-04-23" version="2.2.5.4" />
  <entry date="2012-04-23" category="tech" action="fix">
    <change>
      <text locale="en">Using only the public parent POM</text>
    </change>
  </entry>
  <release date="2012-04-23" version="2.2.5.3" />
  <entry date="2012-04-23" category="tech" action="fix">
    <change>
      <text locale="en">Generating interfaces only to the base classes and not to derived classes</text>
    </change>
  </entry>
  <entry date="2012-04-23" category="tech" action="fix">
    <change>
      <text locale="en">Not generating Serializable for enums</text>
    </change>
  </entry>
  <release date="2012-04-23" version="2.2.5.2" />
  <entry date="2012-04-23" category="tech" action="update" incompatible="true">
    <change>
      <text locale="en">Updated to phloc-commons 3.5.0</text>
    </change>
  </entry>
  <release date="2012-04-20" version="2.2.5" />
</changelog>
